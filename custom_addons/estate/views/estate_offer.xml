<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="estate_offer_form">
            <field name="name">estate_offer.form</field>
            <field name="model">estate_offer</field>
            <field name="arch" type="xml">
                <form string="Oferta">

                    <sheet>

                        <group>
                            <field name="price"/>
                            <field name="status"/>
                            <field name="partner_id"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_estate_offer_tree">
            <field name="name">estate_offer.tree</field>
            <field name="model">estate_offer</field>
            <field name="arch" type="xml">
                <tree string="Oferta">
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <button name="action_accept_offer" type="object" icon="fa-check" attrs="{'invisible': [('status', '!=', False)]}"/>
                    <button name="action_refuse_offer" type="object" icon="fa-times" attrs="{'invisible': [('status', '!=', False)]}"/>
                    <field name="status"/>

                </tree>
            </field>
        </record>
    </data>
</odoo>